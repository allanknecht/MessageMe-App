<h1 class="ui center aligned header">Wellcome to MessageMe!</h1>
<div class="ui center aligned container">
    <div class="ui center aligned">
      <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="10" stroke="#00B5AD" stroke-width="2"/>
        <path d="M10 8L14 12L10 16" stroke="#00B5AD" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
        <line x1="14" y1="12" x2="18" y2="12" stroke="#00B5AD" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <div class="ui small text"><strong>Log in to your account</strong></div>
    </div>
  </div>
  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_with(scope: :session, url: login_path, local: true, class: "ui form") do |f| %>
          <div class="field">
            <%= f.label :username %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <div class="field login-button-field">
            <%= f.submit "Login", class: "ui teal submit button" %>
          </div>
        <% end %>
      </div>
      <div class="middle aligned column">
        <%= link_to signup_path, class: "ui big olive button" do %>
          <i class="signup icon"></i>
          Sign Up
        <% end %>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>